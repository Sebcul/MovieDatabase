    
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Identity.EntityFrameworkCore

@inject SignInManager<IdentityUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><img src="~/images/movie.png" width="20" height="20"/> Movies <b class="caret"></b></a>
        <ul class="dropdown-menu">
            <li><a asp-controller="Movie" asp-action="AddMovie">Add movie</a></li>
            <li><a asp-controller="Movie" asp-action="AddActors">Add actors</a></li>
            <li><a asp-controller="Movie" asp-action="AddRating">Rate movie</a></li>
            <li><a asp-controller="Movie" asp-action="AddGenre">Add genre to movie</a></li>
            <li><a asp-controller="Movie" asp-action="DeleteMovie">Delete movie</a></li>
            <li class="divider"></li>
            <li><a asp-controller="Movie" asp-action="ListAll">List all movies</a></li>
        </ul>
    </li>
}
else
{
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><img src="~/images/movie.png" width="20" height="20"/> Movies <b class="caret"></b></a>
        <ul class="dropdown-menu">
            <li><a asp-controller="Movie" asp-action="AddRating">Rate movie</a></li>
            <li class="divider"></li>
            <li><a asp-controller="Movie" asp-action="ListAll">List all movies</a></li>
        </ul>
    </li>
}