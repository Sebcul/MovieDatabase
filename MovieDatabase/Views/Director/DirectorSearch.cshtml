@model IEnumerable<Director>


<div class="paddingcenterize">
    <h3 class="marginbottom25">Search director</h3>
    <form role="search">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Enter actor name" name="s">
        </div>
        <button type="submit" class="btn btn-default" asp-controller="Director" asp-action="SearchDirector">Find</button>
    </form>



    @if (Model != null)
    {
        <h2 class="margintop25">Found the following directors</h2>
        <div class="container movielistbox">
            @foreach (var director in Model)
            {
                <a href="@Url.Action("DirectorDetails", new { id = director.Id })"><h4>@director.Name</h4></a>
            }
        </div>
    }
</div>
