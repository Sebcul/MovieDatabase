@model DirectorViewModel

@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Identity.EntityFrameworkCore

@inject SignInManager<IdentityUser> SignInManager

<div class="container">
    <h2>
        @Model.Name, @Model.DateOfBirth.ToString("d")
        @if (SignInManager.IsSignedIn(User))
        {
            <a class="paddingleft30" href="@Url.Action("EditDirector", new {id = Model.DirectorId})">Edit director</a>
        }
    </h2>
    <br />
    <h4 class="underline">Movies directed</h4>
    @foreach (var movie in Model.DirectedMovies)
    {
        <span>@movie.Title, @movie.ProductionYear</span>
    }
</div>