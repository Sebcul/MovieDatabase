@model AddRatingViewModel

@using (Html.BeginForm("AddRating", "Movie", FormMethod.Post))
{
    <div>@Html.ValidationSummary()</div>
    <div class="container paddingcenterize">
        <table>
            <tr>
                <td>@Html.LabelFor(m => m.Movies)</td>
                <td>@Html.LabelFor(m => m.Score)</td>
            </tr>
            <tr class="trheightreview">
                <td>@Html.DropDownListFor(n => n.SelectedMovieId, Model.Movies)</td>
                <td>
                    @Html.DropDownListFor(n => n.Score, Model.ScoreList)</td>
            </tr>
            <tr>

                <td>@Html.LabelFor(m => m.ReviewerName)</td>
            </tr>
            <tr class="trheightreview">

                <td>@Html.EditorFor(m => m.ReviewerName, new {htmlAttributes = new {@class = "form-control"}})</td>
            </tr>
            <tr class="trheightreview">

                <td>@Html.LabelFor(m => m.ReviewText)</td>
            </tr>
            <tr class="trheightreview">

                <td colspan="2">@Html.TextAreaFor(m => m.ReviewText, 7, 40, new {htmlAttributes = new {@class = "textarea"}})</td>
            </tr>
            <tr class="trheightreview">
                <td>
                    <input type="submit" value="Add" class="btn btn-default marginbottom25"/>
                </td>
            </tr>
        </table>

    </div>
}
